@model IEnumerable<DanhMuc>

<div class="col-lg-3 d-none d-lg-block">

    <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
        <h6 class="m-0" id="clickhideshow">Danh mục sản phẩm</h6>
        <i class="fa fa-angle-down text-dark"></i>
    </a>
    @if (ViewBag.IsHome != null && ViewBag.IsHome)
    {
        <nav class="collapse show navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0" id="navbar-vertical">
            <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">
                @foreach (var item in Model)
                {
                    <a asp-controller="Product" asp-action="ProductByCategory" asp-route-id="@item.MaDm" class="nav-item nav-link">@item.TenDm</a>
                }
            </div>
        </nav>
    }
    else
    {
        <nav class="collapse show navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 my-nav" id="navbar-vertical1">
            <div class="navbar-nav w-100 overflow-hidden1" style="height: 410px">
                @foreach (var item in Model)
                {
                    <a asp-controller="Product" asp-action="ProductByCategory" asp-route-id="@item.MaDm" class="nav-item nav-link">@item.TenDm</a>
                }
            </div>
        </nav>

    }
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#navbar-vertical1').hide();
    });
    $('#clickhideshow').click(function () {
        $('#navbar-vertical1').toggle("slow");
    });
</script>
