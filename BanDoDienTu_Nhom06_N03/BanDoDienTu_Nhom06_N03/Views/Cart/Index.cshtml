@model List<CartItem>

@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Thông tin giỏ hàng</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-controller="Home" asp-action="Index">Trang chủ</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Giỏ hàng</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle"><img src="@Url.Content("~/Clientassets/img/products/" + item.Product.AnhSp + "")" alt="" style="width: 50px;">@item.Product.TenSp</td>
                                <td class="align-middle">@(item.Product.GiaSp.HasValue ? item.Product.GiaSp.Value.ToString("N0") + "đ" : "Liên hệ Shop")</td>
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-primary btn-minus">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                        </div>
                                        <input type="text" class="form-control form-control-sm bg-secondary text-center" value="@item.Quantity">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-primary btn-plus">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">@((item.Product.GiaSp.GetValueOrDefault(0) * item.Quantity).ToString("N0") + "đ")</td>
                                <td class="align-middle"><button class="btn btn-sm btn-primary remove-item" data-id="@item.Product.MaSp"><i class="fa fa-times"></i></button></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Tóm tắt giỏ hàng</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Số sản phẩm đã chọn</h6>
                        <h6 class="font-weight-medium">@Model.Count</h6>
                    </div>
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Tổng thanh toán</h6>
                        <h6 class="font-weight-medium">@ViewBag.Total</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <button id="btnPayment" class="btn btn-block btn-primary my-3 py-3">Thanh toán</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->

<script>
    $(function () {
        $('.remove-item').click(function (e) {
            e.preventDefault();

            var id = $(this).data('id');
            var url = '@Url.Action("Remove", "Cart")';

            $.ajax({
                type: 'POST',
                url: url,
                data: { id: id },
                success: function (result) {
                    // Refresh cart
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        });
    });
</script>
