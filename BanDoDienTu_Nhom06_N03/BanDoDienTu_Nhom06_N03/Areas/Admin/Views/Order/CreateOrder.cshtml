@model OrderModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-9" style="border: 2px solid white; padding-top:20px;">
        <h3>Thêm đơn hàng</h3>
        @using (Html.BeginForm("CreateOrder", "Order", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaHdb" class="control-label">Mã hóa đơn</label>
                <input asp-for="MaHdb" class="form-control" />
                <span asp-validation-for="MaHdb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaKh" class="control-label">Mã khách hàng</label>
                <select asp-for="MaKh" class="form-control" asp-items="ViewBag.MaKh"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaNv" class="control-label">Mã nhân viên</label>
                <select asp-for="MaNv" class="form-control" asp-items="ViewBag.MaNv"></select>
            </div>
            <div class="form-group">
                <label asp-for="TongTien" class="control-label">Tổng tiền</label>
                <input asp-for="TongTien" class="form-control" />
                <span asp-validation-for="TongTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm mới đơn hàng" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-9" style="border: 2px solid white; padding-top:20px;">
        <h3>Thêm chi tiết đơn hàng</h3>
        @using (Html.BeginForm("CreateOrderDetails", "Order", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaHdb" class="control-label">Mã hóa đơn</label>
                <select asp-for="MaHdb" class="form-control" asp-items="ViewBag.MaHdb"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaSp" class="control-label">Mã sản phẩm</label>
                <select asp-for="MaSp" class="form-control" asp-items="ViewBag.MaSp"></select>
            </div>
            <div class="form-group">
                <label asp-for="SlBan" class="control-label">Số lượng bán</label>
                <input asp-for="SlBan" class="form-control" />
                <span asp-validation-for="SlBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm mới chi tiết đơn hàng" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


