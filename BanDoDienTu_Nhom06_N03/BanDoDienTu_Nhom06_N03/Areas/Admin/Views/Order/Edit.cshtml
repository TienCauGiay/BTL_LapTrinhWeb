@model OrderModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-9" style="border: 2px solid white; padding-top:20px;">
        <h3>Sửa đơn hàng</h3>
        @using (Html.BeginForm("EditOrder", "Order", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHdb" />
            <div class="form-group">
                <label asp-for="MaKh" class="control-label">Mã khách hàng</label>
                <select asp-for="MaKh" class="form-control" asp-items="ViewBag.MaKh"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaNv" class="control-label">Mã nhân viên</label>
                <select asp-for="MaNv" class="form-control" asp-items="ViewBag.MaNv"></select>
            </div>
            <div class="form-group">
                <label asp-for="TongTien" class="control-label">Tổng tiền</label>
                <input asp-for="TongTien" class="form-control" />
                <span asp-validation-for="TongTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
<br />
@if(Model.MaSp != "")
{
    <div class="row">
        <div class="col-md-9" style="border: 2px solid white; padding-top:20px;">   
            <h3>Sửa chi tiết đơn hàng</h3>
            @using (Html.BeginForm("EditOrderDetails", "Order", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaHdb" />
                <input type="hidden" asp-for="MaSp" />
                <div class="form-group">
                    <label asp-for="SlBan" class="control-label">Số lượng bán</label>
                    <input asp-for="SlBan" class="form-control" />
                    <span asp-validation-for="SlBan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
}
else
{
    <h2 class="alert-danger">Chưa có chi tiết đơn hàng cho đơn hàng này</h2>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>



