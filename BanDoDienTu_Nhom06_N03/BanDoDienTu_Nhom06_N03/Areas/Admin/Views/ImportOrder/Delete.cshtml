@model BanDoDienTu_Nhom06_N03.Models.HoaDonNhap

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Bạn có chắc muốn xóa hóa đơn nhập này không</h3>
<div>
    <hr />
    <div class="table-responsive">
        <table class="table table-striped">
            <tbody>
                <tr>
                <td>Mã hóa đơn nhập</td>
                <td>@Html.DisplayFor(model => model.MaHdn)</td>
            </tr>
            <tr>
                <td>Nhà cung cấp</td>
                <td>@Html.DisplayFor(model => model.MaNcc)</td>
            </tr>
            <tr>
                <td>Ngày nhập</td>
                <td>@(Model.NgayNhap.HasValue ? Model.NgayNhap.Value.ToString("dd/MM/yyyy") : "Trống")</td>
            </tr>
            <tr>
                <td>Nhân viên</td>
                <td>@Html.DisplayFor(model => model.MaNv)</td>
            </tr>
            <tr>
                <td>Tổng tiền</td>
                <td>@Model.TongTien.Value.ToString("N0") đ</td>
            </tr>
            </tbody>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaHdn" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
