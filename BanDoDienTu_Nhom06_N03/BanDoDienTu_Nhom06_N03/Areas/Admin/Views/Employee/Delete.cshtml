@model BanDoDienTu_Nhom06_N03.Models.NhanVien

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Bạn có chắc muốn xóa nhân viên này không</h3>
<div>
    <hr />
    <div class="table-responsive">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>Mã nhân viên</td>
                    <td>@Html.DisplayFor(model => model.MaNv)</td>
                </tr>
                <tr>
                    <td>Tên nhân viên</td>
                    <td>@Html.DisplayFor(model => model.HoTen)</td>
                </tr>
                <tr>
                    <td>Ngày sinh</td>
                    <td>@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "Trống")</td>
                </tr>
                <tr>
                    <td>Số điện thoại</td>
                    <td>@Html.DisplayFor(model => model.Sdtnv)</td>
                </tr>
                <tr>
                    <td>Giới tính</td>
                    <td>@Html.DisplayFor(model => model.GioiTinh)</td>
                </tr>
                <tr>
                    <td>Địa chỉ</td>
                    <td>@Html.DisplayFor(model => model.DiaChiNv)</td>
                </tr>
            </tbody>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaNv" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
