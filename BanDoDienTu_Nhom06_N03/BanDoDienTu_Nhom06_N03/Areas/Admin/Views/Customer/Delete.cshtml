@model BanDoDienTu_Nhom06_N03.Models.KhachHang

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Bạn có chắc muốn xóa khách hàng này không?</h3>
<div class="col-md-9">
    <hr />
    <div class="table-responsive">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>Mã khách hàng</td>
                    <td class="text-dark font-weight-bold">@Html.DisplayFor(model => model.MaKh)</td>
                </tr>
                <tr>
                    <td>Tên khách hàng</td>
                    <td class="text-dark font-weight-bold">@Html.DisplayFor(model => model.TenKh)</td>
                </tr>
                <tr>
                    <td>Số điện thoại</td>
                    <td>@Html.DisplayFor(model => model.Sdtkh)</td>
                </tr>
                <tr>
                    <td>Địa chỉ</td>
                    <td>@Html.DisplayFor(model => model.DiaChiKh)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaKh" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
